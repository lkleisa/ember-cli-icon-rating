{{! template-lint-disable no-invalid-interactive no-inline-styles }}
<div
  class="icon-rating-wrapper"
  onmouseleave={{action "mouseLeaveHandler"}}
>
  {{! template-lint-enable no-invalid-interactive }}
  {{#each icons as |index|}}
    <div
      class="icon-rating-icon-wrapper"
      style={{if width (html-safe (concat
        "width: " width
      ))}}
    >
      {{#if showRatingAbove}}
        <div class="icon-rating-value">
          {{index}}
        </div>
      {{/if}}

      <div
        role="button"
        class="icon-rating-icon"
        onclick={{action "clickHandler" index}}
        onmouseenter={{action "mouseEnterHandler" index}}
        style={{html-safe (concat
          "color: "
          (if (or
            (gte hover index)
            (and (not hover) (gte value index))
          ) fillColor baseColor)
        )}}
      >
        <FaIcon @icon="star" />
      </div>

      {{#if showRatingBelow}}
        <div class="icon-rating-value">
          {{index}}
        </div>
      {{/if}}
    </div>
  {{/each}}
</div>